<div class="container-fluid">
    <div class="row-fluid">

        <div class="span2">
            <!--Sidebar content-->
            Search: <input ng-model="query">
            Sort by:
            <select ng-model="orderProp">
                <option value="name">Alphabetical</option>
            </select>
        </div>

        <div class="span10">
            <!--Body content-->
            <ul class="lists">
                <li ng-repeat="list in user.ToDoLists | filter:query | orderBy:orderProp"
                    class="thumbnail user-listing">
                    <a href="#/lists/{{list.userId}}/list/{{list.Id}}">{{list.Title}}</a>
                </li>
            </ul>
        </div>

    </div>
</div>